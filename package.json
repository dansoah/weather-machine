{
  "name": "weather-machine",
  "version": "1.0.0",
  "description": "A weather application created using React and KOA.",
  "main": "app.js",
  "scripts": {
    "test": "ava",
    "start:dev": "npm run build:app && npm run run:dev",
    "start:prod": "npm run build:all && npm run run:prod",
    "run:dev": "cross-env NODE_ENV=development babel-node server/app.js",
    "run:prod": "cross-env NODE_ENV=production node server.js",
    "build:scripts": "webpack --config webpack.config.js --progress --colors",
    "build:styles": "node_modules/.bin/lessc app/less/main.less app-dist/css/main.css",
    "build:app": "npm run build:scripts && npm run build:styles",
    "build:server": "node_modules/.bin/babel server/app.js --out-file ./server.js",
    "build:all": "npm run build:server && npm run build:app"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dansoah/weather-machine.git"
  },
  "author": "Danilo Rechi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dansoah/weather-machine/issues"
  },
  "homepage": "https://github.com/dansoah/weather-machine#readme",
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "cross-env": "^3.1.4",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-router": "^7.1.0",
    "koa-static": "^2.0.0",
    "koa-views": "^5.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.22.0",
    "babel-core": "^6.22.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.22.0",
    "less": "^2.7.2",
    "nodemon": "^1.11.0",
    "webpack": "^1.14.0"
  }
}
